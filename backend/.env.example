# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://rebased:password@localhost:5432/rebased?schema=public"

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ============================================
# BLOCKCHAIN - MONAD TESTNET
# ============================================
MONAD_RPC_URL=https://testnet.monad.xyz
MONAD_CHAIN_ID=10143
MONAD_START_BLOCK=0

# Contract addresses (fill after deployment)
MONAD_REGISTRY=
MONAD_EXECUTOR=
MONAD_ORACLE=
MONAD_UNISWAP_HELPER=
MONAD_CONFIG=
MONAD_DELEGATION_MANAGER=

# ============================================
# BLOCKCHAIN - BASE SEPOLIA
# ============================================
BASE_RPC_URL=https://sepolia.base.org
BASE_CHAIN_ID=84532
BASE_START_BLOCK=0

# Contract addresses (fill after deployment)
BASE_REGISTRY=
BASE_EXECUTOR=
BASE_ORACLE=
BASE_UNISWAP_HELPER=
BASE_CONFIG=
BASE_DELEGATION_MANAGER=

# ============================================
# BOT CONFIGURATION
# ============================================
BOT_PRIVATE_KEY=0x...
MONITORING_INTERVAL=30000
MAX_SLIPPAGE_BPS=100
GAS_REIMBURSEMENT=0.01

# ============================================
# DEX AGGREGATORS
# ============================================
# 1inch
ENABLE_1INCH=true
ONEINCH_API_KEY=
ONEINCH_ROUTER_V5=0x1111111254EEB25477B68fb85Ed929f73A960582

# 0x
ENABLE_0X=true
ZEROX_API_KEY=
ZEROX_API_URL=https://api.0x.org
ZEROX_EXCHANGE_PROXY=0xDef1C0ded9bec7F1a1670819833240f027b25EfF

# ParaSwap
ENABLE_PARASWAP=true
PARASWAP_AUGUSTUS=0xDEF171Fe48CF0115B1d80b88dc8eAB59176FEe57

# Uniswap V2 (fallback)
FALLBACK_UNISWAP=true

# ============================================
# MEV PROTECTION
# ============================================
ENABLE_FLASHBOTS=true
FLASHBOTS_RPC=https://rpc.flashbots.net
ENABLE_INTENTS=false
ENABLE_TEE=false

# ============================================
# GAS ORACLE
# ============================================
ETHGASSTATION_API_KEY=
BLOCKNAATIVE_API_KEY=

# ============================================
# MONITORING & ALERTS
# ============================================
# Logging
LOG_LEVEL=info

# Discord Webhook
DISCORD_WEBHOOK_URL=

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Prometheus
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# RATE LIMITING
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ============================================
# EXTERNAL SERVICES
# ============================================
# Pyth Oracle (for Monad/Base)
PYTH_CONTRACT_MONAD=
PYTH_CONTRACT_BASE=0xA2aa501b19aff244D90cc15a4Cf739D2725B5729
